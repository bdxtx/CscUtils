<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CscDialogActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/transparentDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="透明背景加载中dialog"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/loadingDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载中dialog"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/sureDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单按钮确认dialog"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/sureCancelDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认取消dialog"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>